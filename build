#!/usr/bin/env nu

def "main test" [test: string = ""] {
  cargo test --lib --verbose $test -- --nocapture --test-threads 1
}

def "main run" [path: path] {
  cargo run --bin main -- $path
}

def "main lexer" [path: path] {
  cargo run --bin inspect-lexer -- $path
}

def "main ast" [path: path] {
  cargo run --bin inspect-ast -- $path
}

def "main inspect" [path: path] {
  cargo run --bin inspect -- $path
}

def "main to-js" [path: path] {
  cargo run --bin to-js -- $path
}

def "main" [] {
}
